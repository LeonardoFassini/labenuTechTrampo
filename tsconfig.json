{
	"compilerOptions": {
		"outDir": "./dist/public",
		"sourceMap": true,
		"noImplicitAny": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es6",
		"lib": ["es5", "es6", "dom", "esnext"],
		"jsx": "react",
		"baseUrl": "./src",
		"types": ["node"],
		"paths": {
			"@app": ["app"],
			"@app/*": ["app/*"],
			"@atomic": ["atomic"],
			"@atomic/*": ["atomic/*"]
		},
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
	},
	"exclude": ["**/node_modules/*"]
}
